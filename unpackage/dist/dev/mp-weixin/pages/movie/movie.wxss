.player{background-color: black;}
.movie{width: 100%;height: 440rpx;}
/* 影片基本信息 */
.movie-info{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	background-color: #f7f4f9;
	padding: 40rpx 20rpx;
}
.cover{
	width: 280rpx;height: 380rpx;
}
.movie-desc{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	margin-left: 30rpx;
	width: 400rpx;
}
.title{font-size: 30px;}
.base-info{
	color: darkgray;
	font-size: 13px;
	line-height: 36rpx;
	
	/* white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis; */
}
/* 评分块 */
.score-block{
	background-color: #fff;
	margin-top: 20rpx;
	width: 360rpx;
	height: 90rpx;
	padding: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	box-shadow: 3px 2px 10px #dedede;
}
.score-word,.prise-counts{font-size: 12px;color: gery;}
.movie-score{
	font-size: 26px;
	font-weight: bold;
	margin-left: 8rpx;
	color: #feab2a;
	line-height: 60rpx;
}
.prise-counts{line-height: 44rpx;}
/* 剧情介绍 */
.plots-block{background-color: #f7f4f9;padding: 20rpx 40rpx;}
.plots-title{color: #A9A9A9;font-size: 14px;}
.plots-desc{margin-top: 10rpx;font-size: 16px;line-height: 1.8;}
/* 剧照 */
.scroll-block{ background-color: #f7f4f9;padding: 20rpx 40rpx;}
.scroll-list{ width: 100%;white-space: nowrap;margin-top: 20rpx;}
.plot-images{width: 220rpx;height: 320rpx;margin-right: 10rpx;}
/* 演职人员 */
.actor-wapper{display:inline-block;}
.single-actor{width: 170rpx;height: 240rpx;margin-right: 10rpx;}
.actor-name,.actor-role{width: 170rpx;text-align: center;}
.actor-name{font-size: 15px;}
.actor-role{font-size: 13px;color: #A9A9A9;}

