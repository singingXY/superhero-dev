<view class="page"><swiper class="carousel" indicator-dots="{{true}}" autoplay="{{true}}" interval="{{3000}}" duration="{{1000}}"><block wx:for="{{carouselList}}" wx:for-item="carousel" wx:for-index="__i0__" wx:key="id"><swiper-item><image class="carousel" src="{{carousel.image}}"></image></swiper-item></block></swiper><view class="page-block super-hot"><view class="hot-title-wapper"><image class="hot-ico" src="../../static/icons/hot.png"></image><view class="hot-title">热门影片</view></view></view><scroll-view class="page-block hot" scroll-x="true"><block wx:for="{{hotSuperheroList}}" wx:for-item="superhero" wx:for-index="__i1__" wx:key="id"><view class="single-poster"><view class="poster-wapper"><image class="poster" src="{{superhero.cover}}"></image><view class="movie-name">{{superhero.name}}</view><trailer-stars vue-id="{{'1-'+__i1__}}" innerScore="{{superhero.score}}" showNum="1" bind:__l="__l"></trailer-stars></view></view></block></scroll-view><view class="page-block super-hot"><view class="hot-title-wapper"><image class="hot-ico" src="../../static/icons/yugao.png"></image><view class="hot-title">热门预告</view></view></view><view class="hot-movie page-block"><block wx:for="{{hottrailerList.slice(0,4)}}" wx:for-item="trailer" wx:for-index="index" wx:key="id"><video class="hot-movie-single" src="{{trailer.trailer}}" poster="{{trailer.poster}}" controls></video></block></view><view class="page-block super-hot"><view class="hot-title-wapper"><image class="hot-ico" src="../../static/icons/guess-u-like.png"></image><view class="hot-title">猜你喜欢</view></view></view><block wx:for="{{guessULike}}" wx:for-item="guess" wx:for-index="index" wx:key="id"><view class="page-block guess-u-like"><view class="single-like-movie"><image class="like-movie" src="{{guess.cover}}"></image><view class="movie-desc"><view class="movie-title">{{guess.name}}</view><trailer-stars vue-id="{{'2-'+index}}" innerScore="{{guess.score}}" showNum="0" bind:__l="__l"></trailer-stars><view class="movie-info">{{guess.basicInfo}}</view><view class="movie-info">{{guess.releaseDate}}</view></view><view class="movie-oper" data-index="{{index}}" data-event-opts="{{[['tap',[['praiseMe',['$event']]]]]}}" bindtap="__e"><image class="praise-ico" src="../../static/icons/praise.png"></image><view class="praise-me">赞一下</view><view class="praise-me animation-opacity" animation="{{animationDataArr[index]}}">+1</view></view></view></view></block></view>