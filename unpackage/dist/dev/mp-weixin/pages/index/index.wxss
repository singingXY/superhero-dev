.carousel{
	width: 100%;
	height:440rpx;
	background-color: #eee;
}
/* 热门超英 */
.super-hot{
	margin-top: 12rpx;
	padding: 20rpx;
}
.hot-title-wapper{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
}
.hot-ico{
	width: 30rpx;
	height: 30rpx;
	margin-top: 15rpx;
}
.hot-title{
	font-size: 20px;
	margin-left: 20rpx;
	font-weight: bold;
}
.hot{width: 100%;white-space: nowrap;}
.single-poster{
	display: inline-block;
	margin-left: 20rpx;
}
.poster-wapper{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.poster{
	width: 200rpx;
	height: 270rpx;
	background-color: #eee;
}
.movie-name{
	width: 200rpx;
	margin-top: 10rpx;
	font-size: 14px;
	font-weight: bold;
	/* 省略 */
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
/* 热门预告 */
.hot-movie{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 0 20rpx 20rpx;
}
.hot-movie-single{
	width: 350rpx;
	height: 220rpx;
	margin-top: 10rpx;
	background-color: #000;
}
/* 猜你喜欢 */
.guess-u-like{display: -webkit-box;display: -webkit-flex;display: flex;-webkit-box-orient: vertical;-webkit-box-direction: normal;-webkit-flex-direction: column;flex-direction: column;}
.single-like-movie{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;-webkit-box-orient:horizontal;-webkit-box-direction:normal;-webkit-flex-direction:row;flex-direction:row;padding: 30rpx 20rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.like-movie{
	width: 180rpx;height: 240rpx;
	border-radius: 3%;
	background-color: #eee;
}
.movie-desc{width: 340rpx;display: -webkit-box;display: -webkit-flex;display: flex;-webkit-box-orient: vertical;-webkit-box-direction: normal;-webkit-flex-direction: column;flex-direction: column;}
.movie-title{
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.movie-info{
	color: #808080;
	font-size: 14px;
}
/* 点赞 */
.movie-oper{
	width: 140rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;-webkit-box-orient: vertical;-webkit-box-direction: normal;-webkit-flex-direction: column;flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	border-left: dashed 2px #dbdbdb;
}
.praise-ico{
	width: 40rpx;
	height: 40rpx;
	-webkit-align-self: center;
	        align-self: center;
}
.praise-me{
	font-size: 14px;
	color: #feae2a;
	-webkit-align-self: center;
	        align-self: center;
}
.animation-opacity{
	font-weight: bold;
	opacity: 0;
}

